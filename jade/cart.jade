extends _layout
block content
	.container-fluid
		a.game__link(href="#")
			.game__name-block
				img.game__name-img(src="img/game_name.png", alt="")
		.main__content
			.breadcrumps__block
				ul.breadcrumps__list.list-inline
					li.breadcrumps__item
						a.breadcrumps__link(href="#") Главная страница
					li.breadcrumps__item
						p.breadcrumps__current Корзина
			h1.title Корзина
			form.cart__form(action="#" method="post")
				table.cart__table
					tbody
						tr.cart__line
							th.cart__title._product Товары
							th.cart__title._price Цена
							th.cart__title._num Количество
							th.cart__title._total-price Сумма
							th.cart__title._action
						tr.cart__line
							td.cart__item._border
								a.cart__link(href="#")
									img.cart__image._sizeL(src="img/content/game1.jpg", alt="")
								.cart__item-inner._marg
									p.cart__console Игры для ПК
									p.cart__game-name Metal Gear Solid V: The Phantom Pain
							td.cart__item._border
								p.cart__old-price 1250
									span.rubl a
								p.cart__current-price._price(data-val="830") 830
									span.rubl a
							td.cart__item._border
								.cart__counter-wrap
									button.cart__counter._minus(type="button" data-val="-1")
									input.cart__input-counts(type="text" value="1" data-min-val="1" readonly)
									button.cart__counter._plus(type="button" data-val="1")
							td.cart__item._border
								p.cart__current-price._total-product-price(data-total="830") 830
								span.rubl a
							td.cart__item
								a.cart__close(href="#")
						tr.cart__line
							td.cart__item._border
								a.cart__link(href="#")
